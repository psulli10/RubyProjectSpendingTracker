<div class="heading_container">
<h1>Edit your budget details</h1>
</div>


<div class="form-group">
<form method = "post" action = "/budgets/<%=@budget.id%>">
  <label for="total">Budget total:</label>
  <input id="total" type="number" name="total" value="<%=@budget.total%>" min= "0" pattern="^\d*(\.\d{0,2})?$" step= "0.01"/>

  <label for="warning_limit">Budget warning limit:</label>
  <input id="warning_limit" type="number" name="warning_limit"value="<%=@budget.warning_limit%>" min= "0" pattern="^\d*(\.\d{0,2})?$" step= "0.01"/>

  <input type="submit" value="Edit budget"/>
</form>
</div>
