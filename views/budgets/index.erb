
<div class="heading_container">
<h1>Your budget...</h1>
</div>

<% if @budgets.length > 0 %>
<p> </p>
<% else %>
<div class="header_links">
  <a href="/budgets/new">
  <h3>Add a new budget</h3>
  </a>
</div>
<%end%>



<div class="container">

  <% for budget in @budgets %>
  <div class="budget_message">
    <table style="width:100%">
      <tr>
        <th>Total</th>
        <th>Warning limit</th>
        <th>Remaining</th>
        <th>Skint?</th>
      </tr>
      <tr>
        <td>£<%=budget.pretty_number(budget.total)%></td>
        <td>£<%=budget.pretty_number(budget.warning_limit)%></td>
        <td>£<%=budget.pretty_number(budget.remaining_budget)%></td>
        <td><%=budget.message()%></td>
      </tr>
      </table>
    <form method = "post" action = "/budgets/<%=budget.id%>/delete">
      <input type="submit" value="Delete budget"/>
    </form>
    <hr>
  </div>
  <% end %>

  </div>

<% if @budgets.length > 0%>
<div class="header_links">
<a href="/budgets/<%=budget.id%>/edit">
  <h3>Edit my budget</h3>
</a>
</div>
<% end %>
